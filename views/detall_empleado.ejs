<%- include('partials/header') %>

<h2 class="mb-4 text-primary">Detalles del empleado</h2>

<div class="card shadow">
  <!-- Título con fondo personalizado -->
  <div class="card-title bg-secondary text-white p-3 rounded-top">
    <h5 class="mb-0">
      <i class="bi bi-person-circle me-2"></i>
      <%= empleado.nombre %>
    </h5>
  </div>

  <!-- Contenido del cuerpo -->
  <div class="card-body">
    <p class="card-text"><strong>DNI:</strong> <%= empleado.dni %></p>
    <p class="card-text"><strong>Email:</strong> <%= empleado.email %></p>
    <p class="card-text"><strong>Teléfono:</strong> <%= empleado.telefono || 'No disponible' %></p>
    <p class="card-text"><strong>Dirección:</strong> <%= empleado.direccion || 'No registrada' %></p>
    <p class="card-text"><strong>Código Postal:</strong> <%= empleado.CP || 'No registrado' %></p>
    <p class="card-text"><strong>Población:</strong> <%= empleado.poblacion || 'No registrada' %></p>
    <p class="card-text"><strong>Provincia:</strong> <%= empleado.provincia || 'No registrada' %></p>
    <p class="card-text"><strong>IBAN:</strong> <%= empleado.IBAN || 'No registrado' %></p>
    <p class="card-text"><strong>Estado Civil:</strong> <%= empleado.estado_civil || 'No especificado' %></p>
    <p class="card-text"><strong>Sexo:</strong> <%= empleado.sexo || 'No especificado' %></p>

    <div class="text-end">
      <a href="/empleados" class="btn btn-secondary">Volver a la lista</a>
      <a href="/empleados/editar/<%= empleado.id_empleado %>" class="btn btn-warning">Editar</a>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
