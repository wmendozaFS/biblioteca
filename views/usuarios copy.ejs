<%- include('partials/header') %>

<h2 class="mb-4 text-primary">Usuarios registrados</h2>

<!-- Lista de usuarios -->
<ul class="list-group mb-4 shadow-sm">
  <% if (usuarios.length > 0) { %>
    <% usuarios.forEach(usuario => { %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <span><strong><%= usuario.nombre %></strong> - <%= usuario.email %></span>
        <div class="d-flex">
          <a href="/usuarios/ver/<%= usuario.id %>" class="btn btn-info btn-sm me-2">Ver</a>
          <a href="/usuarios/editar/<%= usuario.id %>" class="btn btn-sm btn-warning me-2">Editar</a>
          <a href="/usuarios/eliminar/<%= usuario.id %>" class="btn btn-sm btn-danger">Eliminar</a>
        </div>
      </li>
    <% }); %>
  <% } else { %>
    <li class="list-group-item text-muted">No hay usuarios registrados.</li>
  <% } %>
</ul>

<!-- Formulario para añadir nuevo usuario -->
<div class="card shadow">
  <div class="card-body">
    <h5 class="card-title">Añadir nuevo usuario</h5>
    <form action="<%= action || '/usuarios/crear'%>" method="POST" class="row g-3 mt-3">
      <div class="col-md-6">
        <label for="nombre" class="form-label">Nombre</label>
        <input type="text" name="nombre" id="nombre" class="form-control" 
        value="<%= usuario.nombre || '' %>" required>
      </div>
      <div class="col-md-6">
        <label for="email" class="form-label">Correo electrónico</label>
        <input type="email" name="email" id="email" class="form-control" 
        value="<%= usuario.email || '' %>"required>
      </div>
      <div class="col-12 text-end">
        <button type="submit" class="btn btn-success"><%= usuario.id?'Actualizar':'Crear'%></button>
      </div>
    </form>
  </div>
</div>

<%- include('partials/footer') %>
