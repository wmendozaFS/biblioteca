<%- include('partials/header') %>

<h2 class="mb-4 text-primary">Detalles del usuario</h2>

<div class="card shadow">
  <!-- Título con fondo personalizado -->
  <div class="card-title bg-info text-white p-3 rounded-top">
    <h5 class="mb-0">
      <i class="bi bi-person-circle me-2"></i>
      <%= usuario.nombre || 'No disponible' %>
    </h5>
  </div>

  <!-- Cuerpo del contenido -->
  <div class="card-body">
    <p class="card-text"><strong>Email:</strong> <%= usuario.email || 'No disponible' %></p>
    <p class="card-text"><strong>Teléfono:</strong> <%= usuario.telefono?.trim() || 'No disponible' %></p>
    <p class="card-text"><strong>Dirección:</strong> <%= usuario.direccion?.trim() || 'No disponible' %></p>
    <p class="card-text"><strong>Código Postal:</strong> <%= usuario.CP?.trim() || 'No disponible' %></p>
    <p class="card-text"><strong>Población:</strong> <%= usuario.poblacion?.trim() || 'No disponible' %></p>
    <p class="card-text"><strong>Provincia:</strong> <%= usuario.provincia?.trim() || 'No disponible' %></p>
    <p class="card-text"><strong>Estado Civil:</strong> <%= usuario.estado_civil?.trim() || 'No disponible' %></p>
    <p class="card-text"><strong>Sexo:</strong> <%= usuario.sexo?.trim() || 'No disponible' %></p>

    <div class="text-end">
      <a href="/usuarios" class="btn btn-secondary">Volver a la lista</a>
      <a href="/usuarios/editar/<%= usuario.id %>" class="btn btn-warning">Editar</a>
    </div>
  </div>
</div>


<%- include('partials/footer') %>
