<%- include('partials/header') %>

<h2 class="mb-4 text-primary">Autores registrados</h2>

<!-- Lista de autores -->
<ul class="list-group mb-4 shadow-sm">
  <% if (autores.length > 0) { %>
    <% autores.forEach(autor => { %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <span><%= autor.nombre %></span>
        <div class="d-flex">
          <a href="/autores/ver/<%= autor.id %>" class="btn btn-info btn-sm me-2">Ver</a>
          <a href="/autores/editar/<%= autor.id %>" class="btn btn-sm btn-warning me-2">Editar</a>
          <a href="/autores/eliminar/<%= autor.id %>" class="btn btn-sm btn-danger">Eliminar</a>
        </div>
      </li>
    <% }); %>
  <% } else { %>
    <li class="list-group-item text-muted">No hay autores registrados.</li>
  <% } %>
</ul>

<!-- Formulario para crear un nuevo autor -->
<div class="card shadow">
  <div class="card-body">
    <h5 class="card-title">AÃ±adir nuevo autor</h5>
    <form action="/autores/crear" method="POST" class="row g-3 mt-3">
      <div class="col-12">
        <label for="nombre" class="form-label">Nombre del autor</label>
        <input type="text" name="nombre" id="nombre" class="form-control" required>
      </div>
      <div class="col-12 text-end">
        <button type="submit" class="btn btn-success">Crear autor</button>
      </div>
    </form>
  </div>
</div>

<%- include('partials/footer') %>
